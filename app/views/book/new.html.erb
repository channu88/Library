<h1>Add new book</h1>
<%= form_tag :action => 'create' do %>
	<p><label for="book_tilte">Title</label> <%= text_field 'book', 'title' %></p>
	<p><label for="book_price">Price</label> <%= text_field 'book', 'price' %></p>
	<p><label for="book_subject">Subject</label> <%= collection_select :book, :subject_id, @subjects, :id, :name %></p>
	<p><label for="book_description">Description</label> <br /> <%= text_area 'book','description' %></p>
	<%= submit_tag "Create" %>
<% end %>
<br /><hr />
